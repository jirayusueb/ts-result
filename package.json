{
  "name": "@ts-result",
  "version": "1.0.0",
  "description": "Rust-inspired Result<T, E> and Option<T> types with universal pattern matching for error handling in TypeScript",
  "author": "Jirayu Sueb <github@jirayusueb.com>",
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "license": "MIT",
  "homepage": "https://github.com/jirayusueb/ts-result#readme",
  "bugs": {
    "url": "https://github.com/jirayusueb/ts-result/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jirayusueb/ts-result.git"
  },
  "type": "module",
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "format:check": "biome check --linter-enabled=false",
    "format:fix": "biome check --linter-enabled=false --write",
    "lint:check": "biome lint",
    "lint:fix": "biome lint --write",
    "test": "vitest --run",
    "test:watch": "vitest",
    "test:coverage": "vitest --run --coverage",
    "test:coverage:json": "vitest --run --coverage --reporter=json"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.10",
    "@types/node": "^25.0.3",
    "@vitest/coverage-v8": "^4.0.16",
    "tsdown": "^0.18.2",
    "typescript": "^5.9.3",
    "vitest": "^4.0.16"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "typescript",
    "library",
    "starter",
    "template",
    "boilerplate",
    "tslib",
    "ts",
    "es6",
    "esm",
    "modern",
    "minimal"
  ]
}
